  }
  .text-center {
    text-align: center;
  }
  .career-button {
    display:         inline-block;
    text-transform:  uppercase;
    background:      #000000;
    color:           #f6f4f4;
    width:           30%;
    padding:         10px 0;
    text-align:      center;
    text-decoration: none;
    font-weight:     600;
    font-family:     'Roboto', sans-serif;
    margin:          20px 1.5% !important;
  }

  .career-button:hover {
    text-decoration: none;
    color:           #f6f4f4 !important;
  }
  @media screen and (max-width: 800px) {
    .career-button {
      width:  100%;
      margin: 10px 0 !important;
    }
  }
</style>
