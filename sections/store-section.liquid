<style>

  .store-content {
    display: flex;
    flex-direction: column;
  }

  .store-image {
    width: 100%;
    height: auto;
    border-radius: 8px;
    margin-bottom: 20px;
  }

  .info {
    display: flex;
    flex-direction: column;
    gap: 10px;
  }

  .info h2 {
    font-size: 1.5rem;
    margin-bottom: 10px;
  }

  .info p, .info strong {
    margin: 4px 0;
  }

  .hours {
    margin-top: 10px;
  }

  .specials {
    margin-top: 30px;
  }

  .specials h3 {
    font-size: 1.2rem;
    font-weight: bold;
    margin-bottom: 10px;
  }

  .appointment-btn {
    background-color: #a94f1d;
    color: #fff;
    padding: 14px 20px;
    border: none;
    border-radius: 6px;
    font-size: 1rem;
    margin-top: 20px;
    cursor: pointer;
    width: 100%;
    max-width: 250px;
  }

  .appointment-btn:hover {
    background-color: #92421a;
  }

  @media(min-width: 768px) {
    .store-content {
      flex-direction: row;
      gap: 40px;
    }

    .store-image {
      max-width: 50%;
    }

    .info {
      max-width: 50%;
    }
  }

    .store-carousel-container {
      position: relative;
      overflow: hidden;
    }

    .store-carousel {
      display: flex;
      overflow-x: auto;
      scroll-behavior: smooth;
      gap: 16px;
      padding-bottom: 10px;
    }

    .store-carousel::-webkit-scrollbar {
      display: none;
    }

    .store-card {
      flex: 0 0 auto;
      width: 250px;
      background: white;
      border-radius: 8px;
      overflow: hidden;
      box-shadow: 0 4px 10px rgba(0, 0, 0, 0.05);
    }

    .store-card img {
      width: 100%;
      height: 180px;
      object-fit: cover;
    }

    .store-card-content {
      padding: 12px 14px;
    }

    .store-card-content h4 {
      font-size: 1rem;
      margin: 0 0 6px;
      color: #444;
    }

    .store-card-content p {
      font-size: 0.9rem;
      color: #666;
    }

    .store-carousel-button {
      position: absolute;
      top: 50%;
      transform: translateY(-50%);
      background-color: #fff;
      border: 1px solid #ccc;
      border-radius: 50%;
      width: 36px;
      height: 36px;
      display: flex;
      align-items: center;
      justify-content: center;
      cursor: pointer;
      z-index: 2;
    }

    .store-carousel-button:hover {
      background-color: #f0f0f0;
    }

    .store-carousel-button.left {
      left: -10px;
    }

    .store-carousel-button.right {
      right: -10px;
    }

    @media (max-width: 768px) {
      .store-carousel-button {
        display: none;
      }
    }

    #store-map {
      width: 100%;
      height: 300px;
      border-radius: 8px;
      overflow: hidden;
    }

  .store-header-title{
    color:gray;
  }

  .store-header-title:hover{
    text-decoration:underline;
  }
  
</style>

