<script>
  // Function to scroll the store carousel
  function storeScrollCarousel(direction) {
    const carousel = document.getElementById('storeCarousel');
    const scrollAmount = 270;
    carousel.scrollBy({ left: scrollAmount * direction, behavior: 'smooth' });
  }

  // Make initMap globally available for Google Maps API
  window.initMap = function () {
    const storeLocation = { lat: 45.397490, lng: -74.056337 }; // Replace with your desired location

    const map = new google.maps.Map(document.getElementById("store-map"), {
      zoom: 12,
      center: storeLocation,
      disableDefaultUI: true,
      gestureHandling: "cooperative",
      styles: [
        {
          featureType: "all",
          elementType: "geometry",
          stylers: [{ color: "#e5e3df" }]
        },
        {
          featureType: "road",
          elementType: "geometry.stroke",
          stylers: [{ color: "#ffffff" }]
        },
        {
          featureType: "water",
          elementType: "geometry.fill",
          stylers: [{ color: "#d4cfc4" }]
        }
      ]
    });

    new google.maps.Marker({
      position: storeLocation,
      map: map,
      title: "Our Store",
      icon: {
        url: "https://cdn0.iconfinder.com/data/icons/small-n-flat/24/678111-map-marker-48.png"
      }
    });
  };
</script>

<!-- Load Google Maps script after defining initMap -->
