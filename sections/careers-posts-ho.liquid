<script>
  $(document).ready(function(){
    let jobsHtml = '';

    for(let i = 0; i < jobs.public_requests.length; i++) {
      if(!jobs.public_requests[i].client.startsWith('Y-')){
        jobsHtml += `
        <tr class="career-city">
          <td>
            <span class="opportunity-location">${jobs.public_requests[i].client.replace('Si√®ge social-','')}</span>
            <br>
            <a data-fancybox="" data-type="iframe" style="color:#0772b3;" href="javascript:;" data-src="${jobs.public_requests[i].job_url}${language == 'en' && '&l=en'}">
              ${language == 'en ' ? jobs.public_requests[i].en_title : jobs.public_requests[i].fr_title}
            </a>
          </td>
          <td>
            ${jobs.public_requests[i].location?.city ?? 'N/A'},  ${jobs.public_requests[i].location?.state ?? 'N/A'}
          </td>
        </tr>
        `;
      }
    }

    document.getElementById('jobs').innerHTML = jobsHtml;

  })
</script>

