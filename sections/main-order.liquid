<div class="container fully-spaced-row--small">
  {% render 'customer-sidebar', customer: customer %}
  <div id="customer_orders">
    <div id="admin_header" data-cc-animate>
      <div class="action_link action_return note" id='return_to_store'><a href="{{ routes.account_url }}?section=order-history">{{ 'customer.order_history.back_to_list' | t }}</a></div>
    </div>


    <div class="account-subsection">
      <div class="d-flex flex-wrap">
        <div class="d-inline-block my-account-left-block">
          <div class="my-account-title-with-underline">
            <div class="title-text d-inline-block w-100">
              {%- liquid
                assign status_label = order.fulfillment_status_label
                if shop.locale == 'en'
                  if order.financial_status_label == 'Refunded'
                    assign status_label = order.financial_status_label
                  endif
                else
                  if order.financial_status_label == 'Remboursée'
                    assign status_label = order.financial_status_label
                  endif
                endif
              -%}
              {{ status_label }}
            </div>
          </div>

          <div class="account-info">
            <p>
              <strong>{{ 'customer.order_history.order_number' | t }}: </strong>
              {{order.name}}
            </p>
            <p>
              <strong>{{ 'customer.order_history.date_ordered' | t }}: </strong>
              {% if shop.locale == 'en' %}
                <span class="date-container">{{ order.created_at | date: "%B, %d %Y" }}</span>
              {% else %}
                <span class="date-container">{{ order.created_at |  date: "%d %B %Y" | replace: "January", "janvier" | replace: "February", "février" | replace: "March", "mars" | replace: "April", "avril" | replace: "May", "mai" | replace: "June", "juin" | replace: "July", "juillet" | replace: "August", "août" | replace: "September", "septembre" | replace: "October", "octobre" | replace: "November", "novembre" | replace: "December", "décembre" }}</span>

              {% endif %}
            </p>
            <p>
              <strong>{{ 'customer.order_history.order_total' | t }}: </strong>
              {% assign order_total_items = 0 %}
              {% for item in order.line_items %}
                {% assign order_total_items =order_total_items | plus: item.quantity %}
              {% endfor %}
              <span class="theme-money">{{ order.total_price | money }}</span> | {{ order_total_items }} item(s)
            </p>

            <p>
              <strong>{{ 'customer.order_history.delivered_on' | t }}: </strong>
            </p>
          </div>
        </div>
        <div class="d-inline-block my-account-right-block">
          <div class="my-account-title-with-underline">
            <div class="title-text d-inline-block w-1005">
              {{ 'customer.order_history.shipping_to' | t }} <span style="text-transform:capitalize;">{{ order.shipping_address.name }} </span>
            </div>

          </div>

          <div class="dashboard-def-add">
            <div><span style="text-transform:capitalize;">{{ order.shipping_address.name }}</span></div>
            <div>{{ order.shipping_address.address1 }}</div>

            {% if order.shipping_address.address2 != blank %}
              <div>{{ order.shipping_address.address2 }}</div>
            {% endif %}
            <div>{{ order.shipping_address.city }}, {% if order.shipping_address.province_code %}{{ order.shipping_address.province_code }}{% endif %} {{ order.shipping_address.zip }}
              <div>{{ order.shipping_address.country }}</div>
              <div>
                <span class="phone">{{ order.shipping_address.phone }}</span>
              </div>

            </div>
          </div>
        </div>
      </div>
    </div>
    <div id="tracking-return" class="d-flex justify-content-between">
      <div class="w-50 ">
        <div class="dashboard-order-btn d-inline-block">
          <a href="https://app.yellowshoes.com/orders/emails/order-created/{{ customer.id }}:{{ order.id }}">{{ 'customer.account.view_email_order_btn' | t }}</a>
        </div>
      </div>
      <div class=" w-50 ">
        {% if order.fulfillment_status == 'fulfilled' %}
        <div class="dashboard-order-btn d-inline-block">
          <div class="tracking-btn" data-order-number="{{ order.name }}" data-email="{{ customer.email }}">{{ 'customer.account.view_tracking_info_btn' | t }}</div>
        </div>
          {% endif %}
      </div>
      <div class="w-50 ">
        <div class="dashboard-order-btn d-inline-block">
          <a href="{% if shop.locale == 'fr' %}/fr{% endif %}/apps/returns">{{ 'customer.account.return_an_item_btn' | t }}</a>
        </div>
      </div>
    </div>

    {% for item in order.line_items %}
      <div class="d-flex customer-dashboard-order single-order">

        <div class="dashboard-order-left">
          <div class="d-inline-block dashboard-order-image-block">
            <a href="{{item.url}}">
              <img src="{{ item.image | image_url }}" class="w-100 position-relative" alt="{{ item.title }}">
            </a>
          </div>
        </div>
        <div class="dashboard-order-right position-relative text-center">
          <div class="order-table-container position-relative" data-cc-animate>
            <table id="order_details" class="order-table text-left">
              <thead>
              <tr>
                <th>{{ 'customer.account.item' | t }}</th>
                <th>{{ 'customer.account.price' | t }}</th>
                <th>{{ 'customer.account.quantity' | t }}</th>
                <th>{{ 'customer.account.total_price' | t }}</th>
              </tr>
              </thead>
              <tbody>
              <tr>
                <td class="text-left">
                  <div>
                    <strong>{{ item.product.title }}</strong>
                    <br>
                    {% assign color = '' %}
                    {% assign size = '' %}
                    {% for variant in  item.product.variants %}
                      {%if variant.id == item.variant_id %}
                        {{ variant.title }}
                        {% assign color = variant.option2 %}
                        {% assign size = variant.option1 %}
                      {%endif%}
                    {%endfor %}
                  </div>
                  <div style="margin-bottom:10px;">
                    <strong>{{ 'customer.order_items.item_status' | t }}:</strong> {{item.fulfillment_status}}
                  </div>
                  <div>
                    <strong>{{ 'customer.order_items.style_number' | t }}:</strong> {{item.sku}}
                  </div>
                  <div>
                    <strong>{{ 'customer.order_items.color' | t }}:</strong> {{color}}
                  </div>
                  <div>
                    <strong>{{ 'customer.order_items.size' | t }}:</strong> {{size}}
                  </div>
                </td>
                <td class="text-left">
                  {%if item.compare_at_price != blank %}
                    <div class="new-price"><span class="theme-money">{{item.compare_at_price | money}}</span></div>
                    <div><s><span class="theme-money">{{item.price | money}}</span></s></div>
                  {%else%}
                    <div><span class="theme-money">{{item.price | money}}</span></div>
                  {%endif%}


                </td>
                <td class="text-left">
                  {{item.quantity}}
                </td>
                <td class="text-left">
                  {% if item.original_line_price != item.final_line_price %}
                    <div class="new-price"><span class="theme-money">{{ item.final_line_price | money }}</span> </div>
                    <div><s><span class="theme-money">{{item.original_line_price | money}}</span></s></div>
                  {%else %}
                    <span class="theme-money">{{ item.final_line_price | money }}</span>
                  {% endif %}

                </td>
              </tr>
              </tbody>
            </table>
            <div class="review-this-product">
              <div class="dashboard-order-btn w-100 d-inline-block">
                <a href="{{item.url}}&write_review=true">{{ 'customer.account.review_this_product_btn' | t }}</a>
              </div>
            </div>
          </div>
        </div>
      </div>
    {%endfor%}

    <div class="d-flex flex-wrap order-totals">
      <div class="d-inline-block w-50">
        <div class="title-text d-inline-block w-100" style="height:40px;">
          {{ 'customer.account.billing_address' | t }}
        </div>
        <div class="dashboard-def-add">
          <div style="text-transform: capitalize;">{{ order.billing_address.name }}</div>
          <div>{{ order.billing_address.address1 }}</div>

          {% if order.billing_address.address2 != blank %}
            <div>{{ order.billing_address.address2 }}</div>
          {% endif %}
          <div>{{ order.billing_address.city }}, {% if order.billing_address.province_code %}{{ order.billing_address.province_code }}{% endif %} {{ order.billing_address.zip }}
            <div>{{ order.billing_address.country }}</div>
            <div>
              <span class="phone"> {{ order.billing_address.phone }}</span>
            </div>
          </div>
        </div>
      </div>
      <div class="d-inline-block w-50 text-right">
        <div class="text-left d-inline-block">
          <div class="title-text d-inline-block w-100" style="height:40px;">
            {{ 'customer.account.order_summary' | t }}
          </div>
          <table class="order-totals-table">
            <tr>
              <th class="p-0">{{ 'customer.account.subtotal' | t }}</th>
              <td class="text-right p-0"><span class="theme-money">{{ order.subtotal_price | money }}</span></td>
            </tr>
            <tr>
              {% assign shipping_price = 0 %}
              {% for shipping_method in order.shipping_methods %}
                {% assign shipping_price = shipping_price | plus: shipping_method.price %}
              {% endfor %}
              <th class="p-0">{{ 'customer.account.shipping' | t }}</th>
              <td class="text-right p-0"><span class="theme-money">{{shipping_price | money }}</span></td>
            </tr>
            <tr>
              <th class="p-0">{{ 'customer.account.discounts' | t }}</th>
              <td class="text-right p-0">-<span class="theme-money">{{ order.total_discounts | money }}</span></td>
            </tr>
            {% for tax in order.tax_lines %}
              <tr>
                <th class="p-0">{{ 'customer.account.tax' | t }} ({{ tax.title }} {{ tax.rate | times: 100 }}%)</th>
                <td class="text-right p-0"><span class="theme-money">{{ tax.price | money }}</span></td>
              </tr>
            {% endfor %}
            <tr>
              <th class="p-0">Total</th>
              <td class="text-right p-0"><span class="theme-money">{{ order.total_price | money }}</span></td>
            </tr>
          </table>
        </div>
      </div>
    </div>


    <div class="order-support">
      <div class="text-center">
        {{ 'customer.account.see_our_return_policy_html' | t }}
      </div>
      <div class="text-center">
        {{ 'customer.account.questions_about_your_order_html' | t }}
      </div>
    </div>






