{% doc %}
  @prompt
    I want to add a slim banner ontop of my hero banner mentioning cold snap in weather this week, and then have a call to action to shop cold waether boots, Can we have two call to action buttons ? One for women's cold weather boots, and one for kids cold weather boots

{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-weather-banner-{{ ai_gen_id }} {
    background-color: {{ block.settings.background_color }};
    color: {{ block.settings.text_color }};
    padding: {{ block.settings.padding }}px 20px;
    text-align: center;
    position: relative;
    overflow: hidden;
  }

  .ai-weather-banner-content-{{ ai_gen_id }} {
    max-width: {{ settings.max_page_width }}px;
    margin: 0 auto;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 20px;
    flex-wrap: wrap;
  }

  .ai-weather-banner-message-{{ ai_gen_id }} {
    font-size: {{ block.settings.text_size }}px;
    font-weight: {{ block.settings.text_weight }};
    margin: 0;
    flex-shrink: 0;
  }

  .ai-weather-banner-buttons-{{ ai_gen_id }} {
    display: flex;
    gap: 12px;
    flex-wrap: wrap;
    justify-content: center;
  }

  .ai-weather-banner-cta-{{ ai_gen_id }} {
    background-color: {{ block.settings.button_color }};
    color: {{ block.settings.button_text_color }};
    padding: 8px 16px;
    border: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    text-decoration: none;
    font-size: {{ block.settings.button_text_size }}px;
    font-weight: 600;
    transition: background-color 0.3s ease;
    white-space: nowrap;
    display: inline-block;
  }

  .ai-weather-banner-cta-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_color }};
    color: {{ block.settings.button_text_color }};
  }

  .ai-weather-banner-cta-secondary-{{ ai_gen_id }} {
    background-color: {{ block.settings.button_secondary_color }};
    color: {{ block.settings.button_secondary_text_color }};
    padding: 8px 16px;
    border: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    text-decoration: none;
    font-size: {{ block.settings.button_text_size }}px;
    font-weight: 600;
    transition: background-color 0.3s ease;
    white-space: nowrap;
    display: inline-block;
  }

  .ai-weather-banner-cta-secondary-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_secondary_hover_color }};
    color: {{ block.settings.button_secondary_text_color }};
  }

  .ai-weather-banner-icon-{{ ai_gen_id }} {
    width: {{ block.settings.icon_size }}px;
    height: {{ block.settings.icon_size }}px;
    fill: {{ block.settings.text_color }};
    flex-shrink: 0;
  }

  @media screen and (max-width: 749px) {
    .ai-weather-banner-content-{{ ai_gen_id }} {
      flex-direction: column;
      gap: 12px;
    }

    .ai-weather-banner-message-{{ ai_gen_id }} {
      font-size: {{ block.settings.text_size | times: 0.9 }}px;
    }

    .ai-weather-banner-{{ ai_gen_id }} {
      padding: {{ block.settings.padding | times: 0.8 }}px 16px;
    }

    .ai-weather-banner-buttons-{{ ai_gen_id }} {
      gap: 8px;
    }
  }
{% endstyle %}

<div class="ai-weather-banner-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-weather-banner-content-{{ ai_gen_id }}">
    {% if block.settings.show_icon %}
      <svg class="ai-weather-banner-icon-{{ ai_gen_id }}" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
        <path d="M12 2C13.1 2 14 2.9 14 4C14 5.1 13.1 6 12 6C10.9 6 10 5.1 10 4C10 2.9 10.9 2 12 2ZM21 11H23V13H21V11ZM1 11H3V13H1V11ZM13 0.55V2.55H11V0.55H13ZM4.93 3.5L6.34 4.91L4.93 6.32L3.52 4.91L4.93 3.5ZM19.07 3.5L20.48 4.91L19.07 6.32L17.66 4.91L19.07 3.5ZM12 8C15.31 8 18 10.69 18 14C18 17.31 15.31 20 12 20C8.69 20 6 17.31 6 14C6 10.69 8.69 8 12 8ZM12 10C9.79 10 8 11.79 8 14C8 16.21 9.79 18 12 18C14.21 18 16 16.21 16 14C16 11.79 14.21 10 12 10ZM7 23V21H17V23H7Z"/>
      </svg>
    {% endif %}

    <p class="ai-weather-banner-message-{{ ai_gen_id }}">
      {{ block.settings.weather_message }}
    </p><div class="ai-weather-banner-buttons-{{ ai_gen_id }}">
      {% if block.settings.cta_text != blank and block.settings.cta_link != blank %}
        <a href="{{ block.settings.cta_link }}" class="ai-weather-banner-cta-{{ ai_gen_id }}">
          {{ block.settings.cta_text }}
        </a>
      {% endif %}

      {% if block.settings.cta_secondary_text != blank and block.settings.cta_secondary_link != blank %}
        <a href="{{ block.settings.cta_secondary_link }}" class="ai-weather-banner-cta-secondary-{{ ai_gen_id }}">
          {{ block.settings.cta_secondary_text }}
        </a>
      {% endif %}
    </div>
  </div>
</div>

