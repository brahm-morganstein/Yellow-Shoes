{% render 'theme.jquery.css' %}
{% render 'multipass-logic' %}
{% render 'wishlist' %}
{% if template contains 'collection' or template contains 'search' %}
  {% if settings.pagination == 'infinite' %}
  <script src="{{ 'ajaxinate.s.min.js' | asset_url }}" defer="defer"></script>  
  <script>
    document.addEventListener("DOMContentLoaded", function() {
      var endlessScroll = new Ajaxinate({
        container: '#Huratips-Loop',
        pagination: '#Huratips-Pagination',
        callback: AjaxinateCallback
      });
    });
  </script>

  <script>
    function AjaxinateCallback(){
      
      const event = new Event("onurlchanged");
      document.dispatchEvent(event);
    }
  </script>    
  {% endif %}  
{% endif %}

