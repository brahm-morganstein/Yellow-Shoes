          <div class="marketing-radio marketing-products" data-target="#marketing-products-men">
            <div class="marketing-radio-background">
            </div>
          </div>
          <div class="marketing-label">{{ 'customer.account.mens_products' | t }}</div>
          <input type="checkbox" id="marketing-products-men" value="men">
        </div>

        <div class="marketing-radio-container">
          <div class="marketing-radio marketing-products" data-target="#marketing-products-kids">
            <div class="marketing-radio-background">
            </div>
          </div>
          <div class="marketing-label">{{ 'customer.account.kids_products' | t }}</div>
          <input type="checkbox" id="marketing-products-kids" value="kids">
        </div>

        <div class="marketing-radio-container">
          <div class="marketing-radio marketing-products" data-target="#marketing-products-accessories">
            <div class="marketing-radio-background">
            </div>
          </div>
          <div class="marketing-label">{{ 'customer.account.accessories' | t }}</div>
