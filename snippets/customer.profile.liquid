<style type="text/css">
  input[disabled] {
    color: #666;
    background-image: none;
    background:#f3f3f3;
  }
</style>

<div id="customer_profile_section" class="account-section" style="display: none;">
  <div class="d-flex flex-wrap">
    <div class="d-inline-block profile-left">
      <div class="my-account-title-with-underline">
        <div class="title-text d-inline-block w-75">
          {{ 'customer.account.personal_information' | t }}
        </div>
        <div class="d-inline-block w-25 text-right">
          <a href="javascript:;" style="text-decoration: underline;" onclick="showPopup('#profile-info-popup')">{{ 'dashboard.edit' | t }}</a>
        </div>
      </div>

      <div class="profile-info-row">
        <div>
          <strong>{{ 'customer.account.first_name' | t }}{% if shop.locale == 'fr' %} :{% else %}:{% endif %} </strong>
          {{ customer.first_name | capitalize }}
        </div>
        <div>
          <strong>{{ 'customer.account.last_name' | t }}{% if shop.locale == 'fr' %} :{% else %}:{% endif %} </strong>
          {{ customer.last_name | capitalize }}
        </div>

        {% comment %}
        {% if customer.phone != '' %}
        <div>
            <strong>{{ 'customer.account.mobile' | t }}{% if shop.locale == 'fr' %} :{% else %}:{% endif %} </strong>
            <span class="phone">{{ customer.phone }}</span>
        </div>
        {% endif %}
        {% endcomment %}
        {% comment %}
        <div class="gender-container">
            <strong>Gender: </strong>
            <span id="gender"></span>
        </div>
        {% endcomment %}
        <div class="birthday-container">
          <strong>{{ 'customer.account.birthday' | t }}{% if shop.locale == 'fr' %} :{% else %}:{% endif %}</strong>
          <span class="dob"></span>
        </div>
        <div>
          <div>
            {% if customer.orders.size != 0 %}
              {% assign order = customer.orders | first %}
              <strong>{{ 'customer.account.member_since' | t }}{% if shop.locale == 'fr' %} :{% else %}:{% endif %} </strong>
              {% if shop.locale == 'en' %}
                <span class="date-container">{{ order.created_at | split: " " | first | date: "%B, %d %Y"}}</span>
              {% else %}
                <span class="date-container">{{ order.created_at | split: " " | first | date: "%d %B %Y" | replace: "January", "janvier" | replace: "February", "février" | replace: "March", "mars" | replace: "April", "avril" | replace: "May", "mai" | replace: "June", "juin" | replace: "July", "juillet" | replace: "August", "août" | replace: "September", "septembre" | replace: "October", "octobre" | replace: "November", "novembre" | replace: "December", "décembre"}}</span>
              {% endif %}
            {% endif %}
          </div>
        </div>
      </div>


    </div>
    <div class="d-inline-block profile-right">
      <div class="my-account-title-with-underline">
        <div class="title-text d-inline-block w-75">
          Address
        </div>
        <div class="d-inline-block w-25 text-right">
          <a href="javascript:;" style="text-decoration: underline;" onclick="showPopup('#profile-address-popup')">Edit</a>
        </div>
      </div>

      <div class="dashboard-def-add">
        {% if customer.default_address %}
          <div style="text-transform:capitalize;">{{ customer.default_address.name | capitalize }}</div>
          <div>{{ customer.default_address.address1 }}</div>

          {% if customer.default_address.address2 != blank %}
            <div>{{ customer.default_address.address2 }}</div>
          {% endif %}

          <div>{{ customer.default_address.city }}, {% if customer.default_address.province_code %}{{ customer.default_address.province }}{% endif %} <span class="postal-code">{{ customer.default_address.zip }}</span>
            <div>{{ customer.default_address.country }}</div>
          </div>
        {%endif%}
      </div>
    </div>
  </div>

  <div class="account-subsection">

    <div class="d-flex flex-wrap">

      <div class="d-inline-block profile-left">
        <div class="my-account-title-with-underline">
          <div class="title-text d-inline-block w-75">
            {{ 'customer.account.contact_preferences' | t }}
          </div>
          <div class="d-inline-block w-25 text-right">
            <a href="javascript:;" onclick="showPopup('#profile-marketing-popup')" style="text-decoration: underline;">Edit</a>
          </div>
        </div>

        <div>
          {{ 'customer.account.update_your_preferences' | t }}
        </div>
        <div>
          <strong>{{ 'customer.account.interest' | t }}{% if shop.locale == 'fr' %} :{% else %}:{% endif %} </strong>
          <span id="interests_in">Everything</span>
        </div>
        <div>
          <strong>{{ 'customer.account.frequency' | t }}{% if shop.locale == 'fr' %} :{% else %}:{% endif %} </strong>
          <span id="frequency_in">{{ 'customer.account.marketing_frequency_all' | t }}</span>
        </div>
        <div>
          <strong>{{ 'customer.account.language' | t }}{% if shop.locale == 'fr' %} :{% else %}:{% endif %} </strong>
          <span id="language_in">marketing_frequency_promos
                    {{ 'customer.account.marketing_frequency_promos' | t }}
                    </span>
        </div>
        <div>
          <strong>{{ 'customer.account.email' | t }}{% if shop.locale == 'fr' %} :{% else %}:{% endif %} </strong>
          {{ customer.email }}
        </div>
        <div class="phone-container">
          <strong>{{ 'customer.account.phone' | t }}{% if shop.locale == 'fr' %} :{% else %}:{% endif %} </strong>
          <span class="phone mobile-phone"></span>
        </div>
      </div>
      <div class="d-inline-block profile-right">
        <div class="my-account-title-with-underline">
          <div class="title-text d-inline-block w-75">
            {{ 'customer.reset_password.title' | t }}
          </div>
          <div class="d-inline-block w-25 text-right">
            <a href="javascript:;" style="text-decoration: underline;" onclick="showPopup('#change-password-popup')">{{ 'dashboard.edit' | t }}</a>
          </div>
        </div>
      </div>
    </div>

  </div>

</div>
