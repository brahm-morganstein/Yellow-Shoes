        <div class="marketing-radio-container">
          <div class="marketing-radio" id="all-marketing-products">
            <div class="marketing-radio-background">
            </div>
          </div>
          <div class="marketing-label">{{ 'customer.account.all_products' | t }}</div>
        </div>

        <div class="marketing-radio-container">
          <div class="marketing-radio marketing-products" data-target="#marketing-products-women">
            <div class="marketing-radio-background">
            </div>
          </div>
          <div class="marketing-label">{{ 'customer.account.womens_products' | t }}</div>
          <input type="checkbox" id="marketing-products-women" value="women">
